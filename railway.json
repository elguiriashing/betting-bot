{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "python -m bot.main",
    "restartPolicyType": "ON_FAILURE"
  },
  "variables": {
    "OPENAI_API_KEY": "",
    "TELEGRAM_BOT_TOKEN": "",
    "FREE_CHANNEL": "@YourFreeTips",
    "PREMIUM_CHANNEL": "@YourPremiumTips"
  },
  "cron": [
    {
      "schedule": "0 11,19 * * *",
      "command": "python -m bot.main"
    }
  ]
}
